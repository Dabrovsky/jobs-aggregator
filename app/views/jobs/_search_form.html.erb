<%= form_with(
    url: jobs_path,
    class: "flex items-center",
    data: { controller: "form", form_autosubmit_value: true, form_submitdelay_value: 100, action: "app#activateSpinner" },
    method: :get
  ) do |form| %>
  <div class="flex flex-1 items-center space-x-2 px-4 border border-gray-200 rounded-l bg-white focus-within:border-green-400 focus-within:z-10">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 text-gray-400">
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.3-4.3"></path>
    </svg>
    <%= form.text_field :title, class: "w-full py-4 outline-none text-xs", value: params[:title], placeholder: "Job title" %>
  </div>

  <div class="flex flex-1 items-center space-x-2 px-4 border border-gray-200 rounded-r -ml-px bg-white focus-within:border-green-400 focus-within:z-10">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 text-gray-400">
      <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
      <circle cx="12" cy="10" r="3"></circle>
    </svg>
    <%= form.text_field :location, class: "w-full py-4 outline-none text-xs", value: params[:location], placeholder: "Location" %>
  </div>
<% end %>
